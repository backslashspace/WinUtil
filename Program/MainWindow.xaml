<Window x:Class="Stimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="SinUtil Implementation Preview" Height="216" Width="450">

    <Grid>

        <Button x:Name="System_Base_Configuration"
            Margin="10,10,0,0"
            Background="orange"
            HorizontalAlignment="Left"
            Width="201" Height="42"
            VerticalAlignment="Top"
            Click="System_Base_Configuration_Click"
            Content="System Base Configuration"
            />

        <Button x:Name="Appearance"
            Margin="10,57,0,0"
            Background="orange"
            HorizontalAlignment="Left"
            Width="201" Height="42" VerticalAlignment="Top"
            Click="Appearance_Click"
            Content="Appearance"
            />

        <Button x:Name="Privacy_and_Security"
            Margin="0,10,10,0"
            Background="orange"
            Click="Privacy_and_Security_Click"
            Content="Privacy and Security" HorizontalAlignment="Right" Width="201" Height="42" VerticalAlignment="Top"
            />

        <Button x:Name="Miscellaneous"
            Margin="0,57,10,0"
            Background="orange" Height="42" VerticalAlignment="Top"
            Click="Miscellaneous_Click"
            Content="Miscellaneous" HorizontalAlignment="Right" Width="201"
            />

        <Button x:Name="Applications"
            Margin="0,104,10,0"
            Background="orange" Height="42" VerticalAlignment="Top"
            Click="Applications_Click"
            Content="Applications" HorizontalAlignment="Right" Width="201"
            />

        <Button x:Name="Restart_Explorer"
            Margin="10,104,0,0"
            Background="ForestGreen"
            HorizontalAlignment="Left"
            Width="201" Height="42" VerticalAlignment="Top"
            Click="Restart_Explorer_Click"
            Content="Restart Explorer"
            />

        <TextBlock x:Name="BuildNumberBox"
            Text="Build: "
            Margin="0,0,0,4"
            HorizontalAlignment="Center"
            Width="auto" Height="21" VerticalAlignment="Bottom"/>

        <Button x:Name="Debug"
            Visibility="Collapsed"
            IsEnabled="False"
            Margin="0,0,10,10"
            Background="Red"
            HorizontalAlignment="Right"
            Width="64"
            Click="Debug_Click"
            FontSize="8"
            Content="Debug" Height="14" VerticalAlignment="Bottom"
            />

    </Grid>
</Window>